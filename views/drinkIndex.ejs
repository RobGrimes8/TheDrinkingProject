<%- include("partials/header")%>
    <%- include("partials/navbar") %>
        <div class="container">
            <div class="row align-items-center justify-content-around drinkRow">
                <% drinks.forEach(function(drink){ %>
                    <div class="col-10 col-md-3">
                        <div class="card mb-5">
                            <img src="<%= drink.image %>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <div class="card-content">
                                    <h5 class="card-title">
                                        <%= drink.name %>
                                    </h5>
                                    <p class="card-text">
                                        <%= drink.desc %>
                                    </p>
                                </div>

                                <a href="/drinks/<%= drink._id %>" class="btn btn-primary">Learn more</a>
                            </div>
                        </div>
                    </div>

                    <% }) %>
                        <div class="col-10 col-md-3">
                            <div class="card">
                                <div class="card-plus-top"><i class="fas fa-plus"></i></div>
                                <div class="card-body">
                                    <div class="card-content">
                                        <h5 class="card-title">
                                            Add to the collection
                                        </h5>
                                        <p class="card-text">
                                            Add your own cocktail for others to make!
                                        </p>
                                    </div>

                                    <a href="/drinks/new" class="btn btn-primary">Learn more</a>
                                </div>
                            </div>
                        </div>
            </div>
        </div>



        <%- include("partials/footer")%>